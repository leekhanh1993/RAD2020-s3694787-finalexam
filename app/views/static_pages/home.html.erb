<div class="my-5">
    <div class="row mb-5">
        <div class="container text-center text-white">
            <h1>Clock+</h1>
            <h5>Clock+ built by Vo Tran Nhut Khanh - s3694787@rmit.edu.au - 80+ - Homy</h5>
            
        </div>
    </div>
    <div class="row">
        <!-- Left side -->
        <div class="col-3 text-white">
            <div class="float-right my-auto">
                <div class="list-inline">
                    <div class="myicon bg-success list-inline-item"></div>
                    <p class="list-inline-item">Business time</p>
                </div>

                <div class="list-inline">
                    <div class="myicon bg-warning list-inline-item"></div>
                    <p class="list-inline-item">Business Overtime</p>
                </div>

                <div class="list-inline">
                    <div class="myicon bg-danger list-inline-item"></div>
                    <p class="list-inline-item">Personal time</p>
                </div>

                <div class="list-inline">
                    <svg class="bi bi-moon list-inline-item" width="1em" height="1em" viewBox="0 0 16 16"
                        fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M14.53 10.53a7 7 0 0 1-9.058-9.058A7.003 7.003 0 0 0 8 15a7.002 7.002 0 0 0 6.53-4.47z" />
                    </svg>
                    <p class="list-inline-item">Sleeping time</p>
                </div>
            </div>

        </div>

        <!-- center -->
        <div class="col-6 text-white list-city" style="background-color: gray;">

            <!-- list city -->
            <!-- default -->
            <div class="row my-4" style="border-bottom: solid 1px black;">
                <div class="col-12 pb-3">
                    <div class="row">
                        <!-- Colum nam -->
                        <div class="col-8">
                            <h3>Melbourne</h3>
                        </div>

                        <!-- Colum time -->
                        <div class="col-4">
                            <div class="float-right">
                                <div class="float-right">
                                    <!-- 12 hours -->
                                    <h3 class="12htype"><%= @default_timezone.now.strftime("%I:%M %p")%></h3>

                                    <!-- 24 hours -->
                                    <h3 class="24htype"><%= @default_timezone.now.strftime("%H:%M")%></h3>
                                </div>
                                <div class="list-inline">
                                    <div class="list-inline-item">Today</div>
                                    <%= time_status(@default_timezone)%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <%= render partial: "country_zone", locals: {zone: "London", default_timezone: @default_timezone} %>
            <%= render partial: "country_zone", locals: {zone: "Wellington", default_timezone: @default_timezone} %>
            <%= render partial: "country_zone", locals: {zone: "America/New_York", default_timezone: @default_timezone} %>


            <!-- Adding city -->
            <div class="row addconzone">
                <div class="col-12 text-center pb-3" style="cursor: pointer;" id="ensearch">
                    <h5>+</h5>
                </div>
            </div>

        </div>

        <!-- center -->

        <!-- Search Field -->
        <div class="col-6 text-white searchfield" style="background-color: gray;">

            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="City name or UTC" id="searchform">
                <div class="input-group-append">
                  <button class="btn btn-outline-dark close-search" type="button">Cancel</button>
                </div>
              </div>
        </div>
        <!-- Search Field -->

        <!-- Right side -->
        <div class="col-3">
            <div class="float-left my-auto text-white">
                <div class="mb-3">
                    <p>Color theme</p>
                </div>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <button id="btnblack" type="button" class="btn btn-secondary">Black</button>
                    <button id="btngraphite" type="button" class="btn btn-secondary">Graphite</button>
                    <button id="darkslategray" type="button" class="btn btn-secondary">Darkslategray</button>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="" id="check24h">
                    <label class="form-check-label" for="defaultCheck1">
                        24-Hour clock
                    </label>
                </div>
            </div>
        </div>

    </div>
</div>
</div>